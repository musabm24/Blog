<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Blog Title -->
    <TextView
        android:id="@+id/blog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="BlogNest"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- Blog Name Input -->
    <EditText
        android:id="@+id/blog_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Blog Name"
        android:inputType="text" />

    <!-- Blog Body Input -->
    <EditText
        android:id="@+id/blog_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Blog Body"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <!-- Select Image Button -->
    <Button
        android:id="@+id/select_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_marginTop="8dp" />

    <!-- Selected Image Preview -->
    <ImageView
        android:id="@+id/selected_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Selected Image"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_camera" />

    <!-- Save Blog Button -->
    <Button
        android:id="@+id/save_blog_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Blog"
        android:layout_marginTop="16dp" />

    <!-- Search Blog Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Search Blogs"
            android:layout_weight="1"
            android:inputType="text" />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search" />
    </LinearLayout>

    <!-- Blogs Display Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"> <!-- Adjusted to allow dynamic content height -->

        <LinearLayout
            android:id="@+id/blogsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
    <Button
        android:id="@+id/delete_selected_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Selected" />
</LinearLayout>
